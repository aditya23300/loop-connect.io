<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LoopConnect.io</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="../css/room.css" />
    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="../pics/favicon-32x32.png" />
    <!-- Include Peer.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/peerjs@1.3.2/dist/peerjs.min.js"></script>
    <script src="https://unpkg.com/peerjs@1.5.4/dist/peerjs.min.js"></script>
  </head>
  <body>
    <div class="non-scroll-fixed-div">
      <div class="status-bar">
        <div class="logo-pic">
          <img
            src="../pics/loopconnect_logo-removebg-preview (2).png"
            alt="MyApp Logo"
            class="logo"
          />
        </div>
        <div class="user-info">
          <h2>Welcome,<%= userInfo.username %>!</h2>
          <p><%= userInfo.email %></p>
        </div>
        <div class="status-bar-buttons">
          <button class="status-bar-btn view-chat-box">Hide Chat-Box</button>
          <button class="status-bar-btn refresh-btn">Refresh Loop-Room</button>
          <button
            onclick="window.location.href='/dashbd/home'"
            class="status-bar-btn end-call"
          >
            End Call
          </button>
        </div>
      </div>
      <hr class="white-line" />
      <!-- Popup Container -->
      <div id="popupOverlay">
        <div class="popup">
          <h2 id="popup-title"></h2>
          <p id="popup-body"></p>
          <div class="loader"></div>
          <button id="refresh-btn" class="refresh-btn hidden">Refresh</button>
        </div>
      </div>
      <div class="media-section-container">
        <!-- Media Boxes -->
        <div id="video-grid" class="media-container">
          <div class="remote-video-div">
            Remote Cam
            <video class="media-box" id="remote-video">remote video feed</video>
          </div>
        </div>
        <!-- Chatbox -->
        <div class="chat-container">
          <div class="local-video-div">
            Your Cam
            <video class="media-box" id="local-video">your video feed</video>
          </div>
          <div class="chat-box">
            <div class="chat-header">Chat-Box</div>
            <div class="chat-messages" id="chat-messages"></div>
            <div class="chat-input">
              <input type="file" id="fileInput" style="display: none" />
              <button id="sendFile">Share file</button>
            </div>
            <div class="chat-input">
              <input
                type="text"
                placeholder="Type a message..."
                id="messageInput"
              />
              <button id="sendMessage">Send</button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Include Peer.js from CDN -->
    <script src="https://cdn.jsdelivr.net/npm/peerjs@1.3.2/dist/peerjs.min.js"></script>
    <script type="module" src="../js/newroom.js"></script>
  </body>
</html>
